<!DOCTYPE html>
<html>
<head>
  <title>Digital Clock</title>
  <style>
    body {
      font-family: Arial;
      background: black;
      color: lime;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      font-size: 50px;
    }
  </style>
</head>
<body>

<div id="clock"></div>

<script>
function updateClock() {
  const now = new Date();
  let h = now.getHours();
  let m = now.getMinutes();
  let s = now.getSeconds();

  h = h < 10 ? "0" + h : h;
  m = m < 10 ? "0" + m : m;
  s = s < 10 ? "0" + s : s;

  document.getElementById("clock").innerText = h + ":" + m + ":" + s;
}
setInterval(updateClock, 1000);
updateClock();
</script>

</body>
</html>
